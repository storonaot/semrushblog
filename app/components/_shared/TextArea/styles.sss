.wrapper
  margin-bottom: 30px
.textarea
  width: 100%
  max-width: 100%
  min-width: 100%
  background-color: #fff
  height: 155px
  border-radius: 4px
  border: 1px solid #999
  padding: 15px 25px 15px 15px
  font-size: .9em
  line-height: 1.5em
  letter-spacing: -.35px
  &:focus
    border-color: $blue
    box-shadow: 0 0 5px rgba(43, 148, 225, .25)
    outline: none
  &::placeholder
    color: #b0b0b0
    font-size: .9em
