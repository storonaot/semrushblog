.wrapper
  margin-bottom: 30px
.field
  height: 32px
  width: 100%
  border-radius: 3px
  background-color: #fff
  border: 1px solid #999
  font-size: .9em
  font-family: 'Ubuntu'
  padding: 0 15px
  &:focus
    border-color: $blue
    box-shadow: 0 0 5px rgba(43, 148, 225, .25)
  &::placeholder
    color: #b0b0b0
    font-size: .9em
